{
  "name": "swipe-right-js",
  "version": "1.0.2",
  "description": "A lightweight, high-performance, framework-agnostic swipe gesture library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "bun test",
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts --outdir dist --target browser --format esm --minify && bun build src/core/index.ts --outdir dist/core --target browser --format esm --minify",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "swipe",
    "gesture",
    "touch",
    "mobile",
    "framework-agnostic",
    "typescript"
  ],
  "author": {
    "name": "xpriori",
    "url": "https://github.com/phtn"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
